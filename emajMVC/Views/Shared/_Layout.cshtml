<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- SmartMenus core CSS (required) -->
    <link href='~/Resources/smartmenus-1.1.0/css/sm-core-css.css' rel='stylesheet' type='text/css' />

    <!-- "sm-blue" menu theme (optional, you can use your own CSS, too) -->
    @*<link href='~/Resources/smartmenus-1.1.0/css/sm-blue/sm-blue.css' rel='stylesheet' type='text/css' />*@
    <link href='~/Resources/smartmenus-1.1.0/css/sm-clean/sm-clean.css' rel='stylesheet' type='text/css' />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <!-- Begin Header -->
                <div class="logo" style="text-align:left;">
                    <!-- ================================================== Logo ================================================== -->
                    <div style="float:left !important;">
                        <a href="~/Home/Index"><img src="~/img/logoCPL.png" alt="" /></a>
                    </div>
                    <!-- ================================================== Logo ================================================== -->
                </div>
            </div>
            <div class="navbar-collapse collapse">



                <div class="row header">
                    <div style="float:right !important;text-align:right;">

                        <!-- ================================================== Main Navigation ================================================== -->
                        <nav id="main-nav">
                            <ul id="main-menu" class="sm sm-rtl sm-clean">
                                <li>
                                    <a href="#" id="LnkSearch">ورود/ثبت نام</a>
                                    @Html.Partial("_LoginPartial")
                                </li>
                                <li><a href="~/Tbl_Banners/Index">بنرهای وب سایت</a></li>
                                <li>
                                    <a href="#">مدیریت کتاب ها</a>
                                    <ul>
                                        <li><a href="~/Tbl_BooksCategories/Index">موضوع کتاب ها</a></li>
                                        <li><a href="~/Tbl_BooksSize/Index">قطع یا سایز کتاب</a></li>
                                        <li><a href="~/Tbl_authorsAndTranslators/Index">نویسندگان و مترجمین</a></li>
                                        <li><a href="~/Tbl_BooksCoverType/Index">انواع جلد</a></li>
                                    </ul>
                                </li>

                            </ul>
                        </nav>
                        <!-- ================================================== Main Navigation ================================================== -->
                        <form class="form-search">
                            <div id="DivSearch" class="input-prepend" style="float:left !important;display:none;">
                                <button id="BtnSearch" type="button" class="btn"><i class="icon-search"></i></button>
                                <input id="TxtSearch" type="text" class="span2 search-query" style="height:25px;width:375px;">
                            </div>
                        </form>
                    </div>
                </div><!-- End Header -->
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <!-- SmartMenus jQuery plugin -->
    <script src="~/Resources/smartmenus-1.1.0/jquery.smartmenus.js" type="text/javascript"></script>

    <script>
        $(function () {
            $('#main-menu').smartmenus({
                mainMenuSubOffsetX: -1,
                subMenusSubOffsetX: 10,
                subMenusSubOffsetY: 0
            });
        });
    </script>
</body>
</html>
